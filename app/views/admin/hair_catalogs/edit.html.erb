<div class="container">
  <% if @hair_catalog.errors.any? %>
  <%= @hair_catalog.errors.count %>件のエラーが発生しました
  <ul>
    <% @hair_catalog.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <h2>商品新規登録</h2>
   <div class="row">
     <div class="col-sm-2" ></div>
     <div class="col-sm-8" >
     <%= form_with model: @hair_catalog, url: admin_hair_catalog_path, method: :patch do |f| %>
     <table>
  　    <tbody>
         <tr>
    　　     <td>商品画像</td>
    　　     <td><%= f.file_field :image, accept: "image/*" %></td>
    　    </tr>
    　    <tr>
    　　     <td>商品名</td>
    　　     <td><%= f.text_field :name %></td>
    　    </tr>
    　    <tr>
    　　     <td>商品説明</td>
    　　     <td><%= f.text_area :explamatory_text %></td>
    　    </tr>
           <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
     <% end %>
     </div>
     <div class="col-sm-2" ></div>
    </tbody>
    </table>
  </div>
</div>
