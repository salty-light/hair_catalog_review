<div class='container pt-5'>
    <div class='row'>
        <div class='col-md-6'>
            <h3>ヘアロング一覧・追加</h3>
<%= form_with model: @hair_long, url: admin_hair_longs_path, method: :post do |f| %>
  <div class="field">
   
                <td><%= f.label :"髪の長さ", class: "mr-3" %></td>
                <td><%= f.text_field :name, class: "mr-5" %></td>
                <td><%= f.submit'新規登録',class: "btn btn-success" %></td>
            <% end %>
          </div>
            <table class='table border-top border-bottom mt-3'>
                <thead class='table-secondary'>
                    <th>ジャンル</th>
                    <th colspan="3"></th>
                </thead>
                <tbody>
                    <% @hair_longs.each do |hair_long| %>
                        <tr>
                            <td><%= hair_long.name %></td>
                            <td><%= link_to "編集する", edit_admin_hair_long_path(hair_long), class: "btn btn-success" %></td>
                        </tr>
                    <%end%>
                </tbody>
            </table>
        </div>
    </div>
</div>
