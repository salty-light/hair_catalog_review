<% if review.favorited_by?(current_customer) %>
  <%= link_to hair_catalog_review_favorites_path(review.hair_catalog.id, review.id), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= review.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to hair_catalog_review_favorites_path(review.hair_catalog.id, review.id), method: :post,remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= review.favorites.count %> いいね
  <% end %>
<% end %>